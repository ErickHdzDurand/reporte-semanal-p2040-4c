{
  "version": 2,
  "builds": [
    {
      "src": "index.htm",  // Punto de entrada principal
      "use": "@vercel/static"
    },
    {
      "src": "public/datos.csv",  // Archivo estático en carpeta public
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/",  // Redirige la raíz a tu index.htm
      "dest": "/index.htm"
    },
    {
      "src": "/public/(.*)",  // Permite acceso a archivos en /public/
      "dest": "/public/$1"
    },
    {
      "src": "/(.*)",  // Cualquier otra ruta fallida redirige a index.htm
      "dest": "/index.htm"
    }
  ]
}